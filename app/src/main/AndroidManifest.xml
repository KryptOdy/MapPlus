<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peter.tigermapsui" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DirectionActivity"
            android:label="@string/title_activity_direction"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.peter.tigermapsui.MainActivity" />
        </activity>
        <activity
            android:name=".DisplayDirectionActivity"
            android:label="@string/title_activity_display_direction"
            android:parentActivityName=".DirectionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.peter.tigermapsui.DirectionActivity" />
        </activity>
        <activity
            android:name=".FindActivity"
            android:label="@string/title_activity_find"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.peter.tigermapsui.MainActivity" />
        </activity>
        <activity
            android:name=".FindDirectionActivity"
            android:label="@string/title_activity_find_direction"
            android:parentActivityName=".FindActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.peter.tigermapsui.FindActivity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
